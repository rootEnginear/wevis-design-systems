{
  "name": "@wevisdemo/ui",
  "version": "5.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "zx scripts/compile-mitosis.mjs vue \"src/components/**/*.tsx\" && concurrently --kill-others \"npm run mitosis:watch\" \"npm run tailwind:watch\"",
    "build": "npm run mitosis:build && npm run tailwind:build",
    "mitosis:watch": "chokidar \"src/components/**/*.tsx\" -c \"if [ '{event}' = 'change' ] || [ '{event}' = 'add' ]; then zx scripts/compile-mitosis.mjs vue {path}; fi;\"",
    "mitosis:build": "sh scripts/build-mitosis.sh",
    "tailwind:watch": "postcss src/styles/**/*.css --dir styles --watch",
    "tailwind:build": "postcss src/styles/**/*.css --dir styles --env production"
  },
  "devDependencies": {
    "@builder.io/eslint-plugin-mitosis": "^0.0.11",
    "@builder.io/mitosis": "^0.0.76",
    "@builder.io/mitosis-cli": "^0.0.34",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.16",
    "eslint": "^8.25.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.8.4",
    "zx": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wevisdemo/design-systems.git"
  },
  "files": [
    "/react",
    "/svelte",
    "/vue2",
    "/styles"
  ]
}
